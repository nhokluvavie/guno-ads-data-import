# Database Configuration
DB_URL=jdbc:postgresql://localhost:5432/gunads
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password
DB_POOL_SIZE=10
DB_MIN_IDLE=5
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000
DB_MAX_LIFETIME=1800000

# Meta Ads API Configuration
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret
META_ACCESS_TOKEN=your_meta_access_token
META_BUSINESS_ID=your_business_id
META_API_VERSION=v19.0
META_BASE_URL=https://graph.facebook.com
META_RATE_LIMIT=200
META_RETRY_ATTEMPTS=3
META_RETRY_DELAY=5000

# Scheduler Configuration
SCHEDULER_ENABLED=true
DAILY_JOB_CRON=0 0 2 * * ?
HIERARCHY_JOB_CRON=0 0 1 ? * SUN

# Batch Processing
BATCH_SIZE=1000
CHUNK_SIZE=500
THREAD_POOL_SIZE=5
COPY_FROM_THRESHOLD=5000

# Logging
LOG_LEVEL=INFO
JDBC_LOG_LEVEL=WARN
META_SDK_LOG_LEVEL=WARN

# Spring Profile
SPRING_PROFILES_ACTIVE=test